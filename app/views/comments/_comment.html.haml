#comment
  .user-name
    = link_to comment.user.user_name, profile_path(comment.user.user_name)
  .comment-content
    = comment.content
  - if current_user.owns_comment? comment
    = link_to post_comment_path(post, comment), remote: true, method: :delete,data: { confirm: "Are you sure?" } do
      %span(class="glyphicon glyphicon-remove delete-comment")